@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h1>
    <div>
        <span class="text-muted">Last updated: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</span>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Total Events</h6>
                        <h2 class="mb-0">@Model.TotalEvents</h2>
                    </div>
                    <div class="text-primary">
                        <i class="fas fa-calendar fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Published</h6>
                        <h2 class="mb-0">@Model.PublishedEvents</h2>
                    </div>
                    <div class="text-success">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Featured</h6>
                        <h2 class="mb-0">@Model.FeaturedEvents</h2>
                    </div>
                    <div class="text-warning">
                        <i class="fas fa-star fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-danger">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Uncategorized</h6>
                        <h2 class="mb-0">@Model.UncategorizedEvents</h2>
                    </div>
                    <div class="text-danger">
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Activity Stats -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title text-muted">Events Added Today</h6>
                <h3 class="mb-0">@Model.EventsAddedToday</h3>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title text-muted">Events This Week</h6>
                <h3 class="mb-0">@Model.EventsAddedThisWeek</h3>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title text-muted">Events This Month</h6>
                <h3 class="mb-0">@Model.EventsAddedThisMonth</h3>
            </div>
        </div>
    </div>
</div>

<!-- Category Statistics & Recent Events -->
<div class="row">
    <!-- Category Statistics -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Events by Category</h5>
            </div>
            <div class="card-body">
                @if(Model.CategoryStatistics.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th class="text-end">Events</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var stat in Model.CategoryStatistics.Take(10))
                                {
                                    <tr>
                                        <td>
                                            @stat.CategoryName
                                            @if(stat.CategoryName == "Undefined")
                                            {
                                                <span class="badge bg-danger">Needs Review</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <span class="badge bg-primary">@stat.EventCount</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">No category statistics available</p>
                }
            </div>
        </div>
    </div>
    
    <!-- Recent Events -->
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Recent Events</h5>
                <a asp-action="Index" asp-controller="Events" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                @if(Model.RecentEvents.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach(var evt in Model.RecentEvents.Take(5))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@evt.Name</h6>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>@evt.FormattedDate
                                            <span class="ms-2">
                                                <i class="fas fa-tag me-1"></i>@(evt.CategoryName ?? "Uncategorized")
                                            </span>
                                        </small>
                                    </div>
                                    <div>
                                        <a asp-action="Edit" asp-controller="Events" asp-route-id="@evt.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">No recent events</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Pending Categorization -->
@if(Model.PendingCategorization.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card border-warning">
                <div class="card-header bg-warning bg-opacity-10 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2 text-warning"></i>
                        Pending Categorization (@Model.UncategorizedEvents)
                    </h5>
                    <a asp-action="Uncategorized" asp-controller="Events" class="btn btn-sm btn-warning">
                        Review All
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach(var evt in Model.PendingCategorization.Take(6))
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title">@evt.Name</h6>
                                        <p class="card-text small text-muted mb-2">
                                            <i class="fas fa-calendar me-1"></i>@evt.FormattedDate<br/>
                                            <i class="fas fa-map-marker-alt me-1"></i>@evt.Location
                                        </p>
                                        @if(!string.IsNullOrEmpty(evt.ShortDescription))
                                        {
                                            <p class="card-text small">@evt.ShortDescription</p>
                                        }
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <a asp-action="Edit" asp-controller="Events" asp-route-id="@evt.Id" class="btn btn-sm btn-primary w-100">
                                            <i class="fas fa-edit me-1"></i>Categorize
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-flex gap-3 flex-wrap">
                    <a asp-action="Featured" asp-controller="Events" class="btn btn-outline-primary">
                        <i class="fas fa-star me-2"></i>Manage Featured Events
                    </a>
                    <a asp-action="Uncategorized" asp-controller="Events" class="btn btn-outline-warning">
                        <i class="fas fa-question-circle me-2"></i>Review Uncategorized
                    </a>
                    <a asp-action="Index" asp-controller="Events" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-2"></i>View All Events
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
