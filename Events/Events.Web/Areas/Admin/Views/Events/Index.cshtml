@model PaginatedList<AdminEventViewModel>

@{
    ViewData["Title"] = "All Events";
    var search = ViewBag.SearchTerm as string;
    var category = ViewBag.Category as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-calendar me-2"></i>All Events</h1>
    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
    </a>
</div>

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <input type="text" class="form-control" name="search" value="@search" placeholder="Search events by name, location...">
            </div>
            <div class="col-md-4">
                <select class="form-select" name="category">
                    <option value="">All Categories</option>
                    <option value="Music" selected="@(category == "Music")">Music</option>
                    <option value="Art" selected="@(category == "Art")">Art</option>
                    <option value="Business" selected="@(category == "Business")">Business</option>
                    <option value="Sports" selected="@(category == "Sports")">Sports</option>
                    <option value="Theatre" selected="@(category == "Theatre")">Theatre</option>
                    <option value="Cinema" selected="@(category == "Cinema")">Cinema</option>
                    <option value="Festivals" selected="@(category == "Festivals")">Festivals</option>
                    <option value="Exhibitions" selected="@(category == "Exhibitions")">Exhibitions</option>
                    <option value="Conferences" selected="@(category == "Conferences")">Conferences</option>
                    <option value="Workshops" selected="@(category == "Workshops")">Workshops</option>
                    <option value="Undefined" selected="@(category == "Undefined")">Undefined</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-1"></i>Search
                </button>
            </div>
            @if(!string.IsNullOrEmpty(search) || !string.IsNullOrEmpty(category))
            {
                <div class="col-12">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-times me-1"></i>Clear Filters
                    </a>
                    @if(!string.IsNullOrEmpty(search))
                    {
                        <span class="badge bg-info ms-2">Search: "@search"</span>
                    }
                    @if(!string.IsNullOrEmpty(category))
                    {
                        <span class="badge bg-secondary ms-2">Category: @category</span>
                    }
                </div>
            }
        </form>
    </div>
</div>

<!-- Events Count -->
<div class="mb-3">
    <p class="text-muted">
        Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - 
        @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) 
        of @Model.TotalCount events
    </p>
</div>

<!-- Events Table -->
@if(Model.Items.Any())
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60px;">Image</th>
                        <th>Event Name</th>
                        <th style="width: 120px;">Date</th>
                        <th>Category</th>
                        <th style="width: 100px;">Status</th>
                        <th style="width: 80px;">Price</th>
                        <th style="width: 80px;">Featured</th>
                        <th style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var evt in Model.Items)
                    {
                        <tr>
                            <td>
                                <img src="@evt.DefaultImage" alt="@evt.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                            </td>
                            <td>
                                <strong>@evt.Name</strong><br/>
                                <small class="text-muted">
                                    <i class="fas fa-map-marker-alt me-1"></i>@evt.Location
                                </small>
                            </td>
                            <td>
                                <small>
                                    @evt.FormattedDate<br/>
                                    @evt.FormattedTime
                                </small>
                            </td>
                            <td>
                                @if(evt.IsUncategorized)
                                {
                                    <span class="badge bg-warning">Undefined</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@evt.CategoryName</span>
                                }
                                @if(!string.IsNullOrEmpty(evt.SubCategoryName))
                                {
                                    <br/><small class="text-muted">@evt.SubCategoryName</small>
                                }
                            </td>
                            <td>
                                @switch(evt.Status)
                                {
                                    case EventStatus.Published:
                                        <span class="badge bg-success">Published</span>
                                        break;
                                    case EventStatus.Draft:
                                        <span class="badge bg-secondary">Draft</span>
                                        break;
                                    case EventStatus.Cancelled:
                                        <span class="badge bg-danger">Cancelled</span>
                                        break;
                                    case EventStatus.Postponed:
                                        <span class="badge bg-warning">Postponed</span>
                                        break;
                                    case EventStatus.SoldOut:
                                        <span class="badge bg-info">Sold Out</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if(evt.IsFree)
                                {
                                    <span class="badge bg-success">Free</span>
                                }
                            </td>
                            <td>
                                @if(evt.IsFeatured)
                                {
                                    <i class="fas fa-star text-warning"></i>
                                    <span class="badge bg-warning text-dark">Featured</span>
                                }
                                else
                                {
                                    <i class="far fa-star text-muted"></i>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@evt.Id" class="btn btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-area="" asp-controller="Events" asp-action="Details" asp-route-id="@evt.Id" 
                                       class="btn btn-outline-info" title="View" target="_blank">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger" 
                                            onclick="confirmDelete(@evt.Id, '@evt.Name')" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @if(Model.TotalPages > 1)
    {
        <nav aria-label="Events pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                @if(Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.CurrentPage - 1)@(!string.IsNullOrEmpty(search) ? "&search=" + search : "")@(!string.IsNullOrEmpty(category) ? "&category=" + category : "")">
                            <i class="fas fa-chevron-left"></i> Previous
                        </a>
                    </li>
                }
                
                @for(var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i@(!string.IsNullOrEmpty(search) ? "&search=" + search : "")@(!string.IsNullOrEmpty(category) ? "&category=" + category : "")">@i</a>
                    </li>
                }
                
                @if(Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.CurrentPage + 1)@(!string.IsNullOrEmpty(search) ? "&search=" + search : "")@(!string.IsNullOrEmpty(category) ? "&category=" + category : "")">
                            Next <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-calendar-times text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">No events found</h4>
            <p class="text-muted">
                @if(!string.IsNullOrEmpty(search) || !string.IsNullOrEmpty(category))
                {
                    <text>Try adjusting your search criteria.</text>
                }
                else
                {
                    <text>No events in the database yet.</text>
                }
            </p>
        </div>
    </div>
}

<!-- Delete Confirmation Form (Hidden) -->
<form id="deleteForm" method="post" asp-action="Delete" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" id="deleteId" name="id" value="" />
</form>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            if (confirm('Are you sure you want to delete event "' + name + '"?\n\nThis action cannot be undone.')) {
                document.getElementById('deleteId').value = id;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}
