@model FeaturedEventManagementViewModel

@{
    ViewData["Title"] = "Manage Featured Events";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-star me-2 text-warning"></i>Featured Events Management</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to All Events
    </a>
</div>

<!-- Info Card -->
<div class="alert alert-info mb-4">
    <i class="fas fa-info-circle me-2"></i>
    <strong>Featured events</strong> are displayed on the homepage. 
    You can have up to @Model.MaxFeaturedEvents featured events at a time. 
    Currently featuring: <strong>@Model.FeaturedEvents.Count</strong>
</div>

<!-- Currently Featured Events -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="fas fa-star me-2"></i>Currently Featured Events (@Model.FeaturedEvents.Count/@Model.MaxFeaturedEvents)
        </h5>
    </div>
    <div class="card-body">
        @if(Model.FeaturedEvents.Any())
        {
            <div class="row">
                @foreach(var evt in Model.FeaturedEvents)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 border-warning">
                            <img src="@evt.DefaultImage" class="card-img-top" alt="@evt.Name" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h6 class="card-title">@evt.Name</h6>
                                <p class="card-text small">
                                    <i class="fas fa-calendar me-1"></i>@evt.FormattedDate @evt.FormattedTime<br/>
                                    <i class="fas fa-map-marker-alt me-1"></i>@evt.Location<br/>
                                    <i class="fas fa-tag me-1"></i>@(evt.CategoryName ?? "Uncategorized")
                                </p>
                                @if(evt.IsFree)
                                {
                                    <span class="badge bg-success">Free</span>
                                }
                                else if(evt.Price.HasValue)
                                {
                                    <span class="badge bg-primary">@evt.PriceDisplay</span>
                                }
                            </div>
                            <div class="card-footer bg-transparent d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@evt.Id" class="btn btn-sm btn-outline-secondary flex-grow-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="SetFeatured" method="post" class="flex-grow-1">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@evt.Id" />
                                    <input type="hidden" name="isFeatured" value="false" />
                                    <button type="submit" class="btn btn-sm btn-danger w-100" 
                                            onclick="return confirm('Remove this event from featured list?')">
                                        <i class="fas fa-times me-1"></i>Remove
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-star text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">No featured events yet. Select events from the list below to feature them.</p>
            </div>
        }
    </div>
</div>

<!-- Available Events to Feature -->
<div class="card">
    <div class="card-header bg-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Add Events to Featured</h5>
            @if(!Model.CanAddMore)
            {
                <span class="badge bg-warning">Maximum featured events reached</span>
            }
        </div>
    </div>
    <div class="card-body">
        <!-- Search Form -->
        <form method="get" class="mb-4">
            <div class="input-group">
                <input type="text" class="form-control" name="search" value="@Model.SearchTerm" placeholder="Search events...">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Search
                </button>
                @if(!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <a href="@Url.Action("Featured")" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Clear
                    </a>
                }
            </div>
        </form>

        <!-- Available Events List -->
        @if(Model.AvailableEvents.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="width: 80px;">Image</th>
                            <th>Event Name</th>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th style="width: 100px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var evt in Model.AvailableEvents.Items)
                        {
                            <tr>
                                <td>
                                    <img src="@evt.DefaultImage" alt="@evt.Name" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                </td>
                                <td>
                                    <strong>@evt.Name</strong><br/>
                                    <small class="text-muted">
                                        <i class="fas fa-map-marker-alt me-1"></i>@evt.Location
                                    </small>
                                </td>
                                <td>
                                    <small>@evt.FormattedDate<br/>@evt.FormattedTime</small>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@(evt.CategoryName ?? "Uncategorized")</span>
                                    @if(!string.IsNullOrEmpty(evt.SubCategoryName))
                                    {
                                        <br/><small class="text-muted">@evt.SubCategoryName</small>
                                    }
                                </td>
                                <td>
                                    @if(evt.IsFree)
                                    {
                                        <span class="badge bg-success">Free</span>
                                    }
                                    else if(evt.Price.HasValue)
                                    {
                                        <span class="badge bg-primary">@evt.PriceDisplay</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="SetFeatured" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@evt.Id" />
                                        <input type="hidden" name="isFeatured" value="true" />
                                        <button type="submit" class="btn btn-sm btn-warning w-100" 
                                                @(!Model.CanAddMore ? "disabled" : "")>
                                            <i class="fas fa-star me-1"></i>Feature
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if(Model.AvailableEvents.TotalPages > 1)
            {
                <nav aria-label="Events pagination" class="mt-3">
                    <ul class="pagination justify-content-center">
                        @if(Model.AvailableEvents.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(Model.AvailableEvents.CurrentPage - 1)@(!string.IsNullOrEmpty(Model.SearchTerm) ? "&search=" + Model.SearchTerm : "")">
                                    Previous
                                </a>
                            </li>
                        }
                        
                        @for(var i = Math.Max(1, Model.AvailableEvents.CurrentPage - 2); 
                             i <= Math.Min(Model.AvailableEvents.TotalPages, Model.AvailableEvents.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.AvailableEvents.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i@(!string.IsNullOrEmpty(Model.SearchTerm) ? "&search=" + Model.SearchTerm : "")">@i</a>
                            </li>
                        }
                        
                        @if(Model.AvailableEvents.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="?page=@(Model.AvailableEvents.CurrentPage + 1)@(!string.IsNullOrEmpty(Model.SearchTerm) ? "&search=" + Model.SearchTerm : "")">
                                    Next
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-search text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3">
                    @if(!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <text>No events found matching "@Model.SearchTerm"</text>
                    }
                    else
                    {
                        <text>No available events to feature</text>
                    }
                </p>
            </div>
        }
    </div>
</div>
