@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center">
                        <i class="fas fa-envelope-circle-check fa-3x text-success mb-3"></i>
                        <h2 class="fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted mb-4">Your email is being confirmed</p>

                        <div class="mt-4">
                            <partial name="_StatusMessage" model="Model.StatusMessage" />
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <a asp-page="./Login" class="text-decoration-none">
                                <i class="fas fa-sign-in-alt me-1"></i>Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
