@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "External Login Settings";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar Navigation -->
        <div class="col-lg-3 col-md-4 mb-4 mb-md-0">
            <partial name="_ManageNav" />
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-link fa-3x text-primary mb-3"></i>
                        <h2 class="fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted">Manage your connected social accounts</p>
                    </div>

                    <partial name="_StatusMessage" for="StatusMessage" />

                    @if (Model.CurrentLogins?.Count > 0)
                    {
                        <div class="mb-4">
                            <h5 class="mb-3">
                                <i class="fas fa-check-circle text-success me-2"></i>Connected Accounts
                            </h5>
                            <div class="list-group">
                                @foreach (var login in Model.CurrentLogins)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>
                                            <i class="fab fa-@login.LoginProvider.ToLower() me-2"></i>
                                            @login.ProviderDisplayName
                                        </span>
                                        @if (Model.ShowRemoveButton)
                                        {
                                            <form id="@($"remove-login-{login.LoginProvider}")" asp-page-handler="RemoveLogin" method="post" class="d-inline">
                                                <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                                <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                                <button type="submit" class="btn btn-sm btn-danger" title="Remove this @login.ProviderDisplayName login from your account">
                                                    <i class="fas fa-trash me-1"></i>Remove
                                                </button>
                                            </form>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    @if (Model.OtherLogins?.Count > 0)
                    {
                        <div>
                            <hr class="my-4">

                            <h5 class="mb-3">
                                <i class="fas fa-plus-circle text-info me-2"></i>Add Another Service
                            </h5>
                            <p class="text-muted small mb-3">Connect another social account to make logging in easier</p>
                            
                            <form id="link-login-form" asp-page-handler="LinkLogin" method="post">
                                <div class="d-grid gap-2">
                                    @foreach (var provider in Model.OtherLogins)
                                    {
                                        <button id="@($"link-login-button-{provider.Name}")" type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                            <i class="fab fa-@provider.Name.ToLower() me-2"></i>@provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
