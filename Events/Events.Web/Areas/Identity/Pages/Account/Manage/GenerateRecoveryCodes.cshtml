@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Generate Recovery Codes";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <partial name="_StatusMessage" for="StatusMessage" />

                    <div class="text-center mb-4">
                        <i class="fas fa-file-code fa-3x text-warning mb-3"></i>
                        <h2 class="fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted">Create backup recovery codes</p>
                    </div>

                    <div class="alert alert-warning" role="alert">
                        <div class="mb-2">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Important: Keep these codes safe!</strong>
                        </div>
                        <ul class="small mb-0">
                            <li>Store recovery codes in a secure location</li>
                            <li>If you lose your device and don't have recovery codes, you'll lose access to your account</li>
                            <li>Generating new codes doesn't change your authenticator app key</li>
                            <li>To change your authenticator app, <a asp-page="./ResetAuthenticator">reset your authenticator keys</a></li>
                        </ul>
                    </div>

                    <form method="post">
                        <div class="d-grid gap-2">
                            <button class="btn btn-danger btn-lg" type="submit">
                                <i class="fas fa-sync me-2"></i>Generate New Recovery Codes
                            </button>
                            <a asp-page="./TwoFactorAuthentication" class="btn btn-outline-secondary btn-lg text-decoration-none">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <a asp-page="./Index" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>Back to Account Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
