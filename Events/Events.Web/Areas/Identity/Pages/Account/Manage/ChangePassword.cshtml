@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar Navigation -->
        <div class="col-lg-3 col-md-4 mb-4 mb-md-0">
            <partial name="_ManageNav" />
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-lock fa-3x text-primary mb-3"></i>
                        <h2 class="fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted">Update your password</p>
                    </div>

                    <partial name="_StatusMessage" for="StatusMessage" />

                    <form id="change-password-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.OldPassword" class="form-label">
                                <i class="fas fa-key me-2"></i>Current Password
                            </label>
                            <input asp-for="Input.OldPassword" class="form-control form-control-lg" type="password" autocomplete="current-password" aria-required="true" placeholder="Enter your current password" />
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label">
                                <i class="fas fa-lock-open me-2"></i>New Password
                            </label>
                            <input asp-for="Input.NewPassword" class="form-control form-control-lg" type="password" autocomplete="new-password" aria-required="true" placeholder="Enter your new password" />
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                <i class="fas fa-check-circle me-2"></i>Confirm New Password
                            </label>
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" type="password" autocomplete="new-password" aria-required="true" placeholder="Confirm your new password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Update Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
