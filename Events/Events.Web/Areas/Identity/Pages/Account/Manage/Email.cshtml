@page
@model EmailModel
@{
    ViewData["Title"] = "Change Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar Navigation -->
        <div class="col-lg-3 col-md-4 mb-4 mb-md-0">
            <partial name="_ManageNav" />
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-envelope fa-3x text-info mb-3"></i>
                        <h2 class="fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted">Update your email address</p>
                    </div>

                    <partial name="_StatusMessage" for="StatusMessage" />

                    <form id="email-form" method="post">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        }
                        else
                        {
                            <div asp-validation-summary="All" class="alert alert-danger d-none" role="alert"></div>
                        }
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope-circle-check me-2"></i>Current Email
                            </label>
                            <div class="input-group">
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="Your current email" disabled />
                                @if (Model.IsEmailConfirmed)
                                {
                                    <span class="input-group-text bg-success text-white">
                                        <i class="fas fa-check me-1"></i>Verified
                                    </span>
                                }
                                else
                                {
                                    <span class="input-group-text bg-warning text-dark">
                                        <i class="fas fa-exclamation-triangle me-1"></i>Unverified
                                    </span>
                                }
                            </div>
                        </div>

                        @if (!Model.IsEmailConfirmed)
                        {
                            <div class="mb-3">
                                <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-outline-warning btn-sm w-100">
                                    <i class="fas fa-paper-plane me-1"></i>Send Verification Email
                                </button>
                            </div>
                        }

                        <hr class="my-3">

                        <div class="mb-4">
                            <label asp-for="Input.NewEmail" class="form-label">
                                <i class="fas fa-envelope-open me-2"></i>New Email Address
                            </label>
                            <input asp-for="Input.NewEmail" class="form-control form-control-lg" autocomplete="email" aria-required="true" placeholder="Enter your new email address" />
                            <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Change Email
                            </button>
                            <a asp-page="./Index" class="btn btn-outline-secondary btn-lg text-decoration-none">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <a asp-page="./Index" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>Back to Profile
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
