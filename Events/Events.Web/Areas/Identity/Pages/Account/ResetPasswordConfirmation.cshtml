@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password reset successful";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                        <h2 class="fw-bold">Password Reset Successfully!</h2>
                    </div>
                    
                    <p class="lead mb-4">
                        Your password has been reset successfully.
                    </p>
                    
                    <p class="text-muted mb-4">
                        You can now log in with your new password.
                    </p>
                    
                    <hr class="my-4">
                    
                    <div>
                        <a asp-page="./Login" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Log in Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
