@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center">
                        <i class="fas fa-ban fa-3x text-danger mb-3"></i>
                        <h2 class="fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted mb-4">You do not have permission to access this resource</p>

                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            If you believe this is an error, please contact the administrator.
                        </div>

                        <hr class="my-4">

                        <div class="d-grid gap-2">
                            <a href="/" class="btn btn-primary btn-lg text-decoration-none">
                                <i class="fas fa-home me-2"></i>Back to Home
                            </a>
                            <a asp-page="./Login" class="btn btn-outline-secondary btn-lg text-decoration-none">
                                <i class="fas fa-sign-in-alt me-2"></i>Log In
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
