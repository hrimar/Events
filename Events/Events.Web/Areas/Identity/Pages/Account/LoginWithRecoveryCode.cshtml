@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery Code Login";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-key fa-3x text-warning mb-3"></i>
                        <h2 class="fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted">Use your recovery code to access your account</p>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        You have requested to log in with a recovery code. This login will not be remembered until you provide an authenticator app code at log in or disable 2FA.
                    </div>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Input.RecoveryCode" class="form-label">
                                <i class="fas fa-lock me-2"></i>Recovery Code
                            </label>
                            <input asp-for="Input.RecoveryCode" class="form-control form-control-lg" autocomplete="off" placeholder="Enter your recovery code" />
                            <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                            <small class="text-muted d-block mt-2">
                                Recovery codes are long alphanumeric codes provided when you enabled 2FA
                            </small>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Log In
                            </button>
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <a asp-page="./Login" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}