@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration successful";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-envelope-circle-check fa-4x text-success mb-3"></i>
                        <h2 class="fw-bold">Registration Successful!</h2>
                    </div>
                    
                    @if (@Model.DisplayConfirmAccountLink)
                    {
                        <div class="alert alert-warning text-start" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Development Mode:</strong> Email sender not configured.
                        </div>
                        
                        <p class="lead mb-4">
                            Click the link below to confirm your account:
                        </p>
                        
                        <div class="d-grid gap-2">
                            <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-primary btn-lg">
                                <i class="fas fa-check me-2"></i>Confirm Account
                            </a>
                            <a asp-page="./Login" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Go to Login
                            </a>
                        </div>
                        
                        <hr class="my-4">
                        
                        <p class="small text-muted">
                            See <a href="https://aka.ms/aspaccountconf" target="_blank">these docs</a> for how to configure a real email sender.
                        </p>
                    }
                    else
                    {
                        <p class="lead mb-4">
                            Please check your email to confirm your account.
                        </p>
                        
                        <p class="text-muted mb-4">
                            We've sent a confirmation link to your email address.
                            Click the link in the email to activate your account.
                        </p>
                        
                        <hr class="my-4">
                        
                        <div>
                            <a asp-page="./Login" class="btn btn-primary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Login
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

