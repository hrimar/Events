@page
@model LockoutModel
@{
    ViewData["Title"] = "Account Locked";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center">
                        <i class="fas fa-lock fa-3x text-danger mb-3"></i>
                        <h2 class="fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted mb-4">Your account has been temporarily locked for security reasons</p>

                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Please try again later.</strong> If you believe this is an error, please contact support.
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <a asp-page="./Login" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
