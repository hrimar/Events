@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Complete Registration";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fab fa-@Model.ProviderDisplayName.ToLower() fa-3x text-primary mb-3" style="max-width:60px;"></i>
                        <h2 class="fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted">Finish connecting your @Model.ProviderDisplayName account</p>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        <strong>Success!</strong> You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                    </div>

                    <p class="text-center text-muted mb-4">
                        Please enter an email address below to complete your registration.
                    </p>

                    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email Address
                            </label>
                            <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="email" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Complete Registration
                            </button>
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <a asp-page="./Login" class="text-decoration-none">
                                <i class="fas fa-arrow-left me-1"></i>Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
