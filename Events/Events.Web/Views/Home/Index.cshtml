@model Events.Web.Models.HomePageViewModel

@{
    ViewData["Title"] = "Sofia Events - Discover Amazing Events";
}

<!-- Hero Section -->
<section class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">Discover the Best Events in Sofia</h1>
                <p class="lead mb-4">Concerts, theatre, sports, and much more. Find your next amazing experience!</p>
                
                <!-- Main CTA to Events Page -->
                <div class="d-flex gap-3">
                    <a href="@Url.Action("Index", "Events")" class="btn btn-light btn-lg">
                        <i class="fas fa-search me-2"></i>Browse All Events
                    </a>
                    <a href="@Url.Action("Index", "Events", new { free = true })" class="btn btn-success btn-lg">
                        <i class="fas fa-gift me-2"></i>Free Events
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-calendar-alt" style="font-size: 8rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Quick Category Navigation -->
<section class="py-4 bg-light">
    <div class="container">
        <h3 class="text-center mb-4">Browse by Category</h3>
        <div class="row">
            @foreach(var category in EventsPageViewModel.AvailableCategories.Take(6))
            {
                <div class="col-md-2 col-6 mb-3">
                    <a href="@Url.Action("Index", "Events", new { category = category.Value })" 
                       class="btn btn-outline-primary w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none">
                        <i class="@category.IconClass mb-2" style="font-size: 2rem;"></i>
                        <span>@category.DisplayName</span>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

<!-- Featured Events (No Pagination) -->
<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Featured Events</h2>
            <a href="@Url.Action("Index", "Events")" class="btn btn-outline-primary">
                View All Events <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
        
        <div class="row">
            @foreach(var eventItem in Model.FeaturedEvents.Take(6))
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card event-card h-100">
                        <!-- Clickable Image -->
                        <a href="@Url.Action("Details", "Events", new { id = eventItem.Id })" class="text-decoration-none">
                            <div class="event-image-container">
                                <img src="@eventItem.DefaultImage" 
                                     alt="@eventItem.Name" 
                                     class="event-image-full"
                                     onerror="this.src='/images/default-event.jpg'">
                                <div class="event-price @(eventItem.IsFree ? "event-free" : "")">
                                    @eventItem.PriceDisplay
                                </div>
                            </div>
                        </a>
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="event-title">
                                <a href="@Url.Action("Details", "Events", new { id = eventItem.Id })" class="text-decoration-none text-dark">
                                    @eventItem.Name
                                </a>
                            </h5>
                            <div class="event-date mb-2">
                                <i class="fas fa-calendar me-1"></i>
                                @eventItem.FormattedDate @eventItem.FormattedTime
                            </div>
                            <div class="event-venue mb-2">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                @eventItem.Location
                            </div>
                            
                            @if(!string.IsNullOrEmpty(eventItem.CategoryName))
                            {
                                <div class="mb-2">
                                    <a href="@Url.Action("Index", "Events", new { category = eventItem.CategoryName })" class="badge bg-secondary text-decoration-none">
                                        @eventItem.CategoryName
                                    </a>
                                </div>
                            }
                        </div>
                        
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("Details", "Events", new { id = eventItem.Id })" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-info-circle me-1"></i>Details
                                </a>
                                @if(eventItem.HasTicketUrl)
                                {
                                    <a href="@eventItem.TicketUrl" target="_blank" class="btn btn-primary btn-sm">
                                        <i class="fas fa-ticket-alt me-1"></i>Buy tickets
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="bg-light py-4">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <h3 class="text-primary">@Model.TotalEvents</h3>
                <p class="text-muted">Total Events</p>
            </div>
            <div class="col-md-3">
                <h3 class="text-success">@Model.TodayEvents</h3>
                <p class="text-muted">Today's Events</p>
            </div>
            <div class="col-md-3">
                <h3 class="text-info">@Model.ThisWeekEvents</h3>
                <p class="text-muted">This Week</p>
            </div>
            <div class="col-md-3">
                <a href="@Url.Action("Index", "Events", new { free = true })" class="btn btn-success">
                    <i class="fas fa-gift me-2"></i>Free Events
                </a>
            </div>
        </div>
    </div>
</section>