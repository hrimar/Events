@model Events.Web.Models.HomePageViewModel

@{
    ViewData["Title"] = "Sofia Events - Discover Amazing Events";
}

<!-- Hero Section -->
<section class="bg-primary text-white py-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-6 fw-bold mb-2">Discover the Best Events in Sofia</h1>
                <p class="lead mb-3" style="font-size: 1.1rem;">Concerts, theatre, sports, and much more. Find your next amazing experience!</p>
                
                <!-- Main CTA to Events Page -->
                <div class="d-flex gap-3">
                    <a href="@Url.Action("Index", "Events")" class="btn btn-light">
                        <i class="fas fa-search me-2"></i>Browse All Events
                    </a>
                    <a href="@Url.Action("Index", "Events", new { free = true })" class="btn btn-success">
                        <i class="fas fa-gift me-2"></i>Free Events
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-calendar-alt" style="font-size: 5rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Quick Category Navigation -->
<section class="py-2 bg-light">
    <div class="container">
        <h4 class="text-center mb-3">Browse by Category</h3>
        <div class="row">
            @foreach(var category in EventsPageViewModel.AvailableCategories.Take(6))
            {
                <div class="col-md-2 col-6 mb-3">
                    <a href="@Url.Action("Index", "Events", new { category = category.Value })" 
                       class="btn btn-outline-primary w-100 h-100 d-flex flex-column align-items-center justify-content-center text-decoration-none">
                        <i class="@category.IconClass mb-2" style="font-size: 2rem;"></i>
                        <span>@category.DisplayName</span>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

