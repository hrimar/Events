@using Events.Models.Enums
@using Events.Web.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sofia Events</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Theme CSS Files -->
    <link rel="stylesheet" href="~/css/themes/light-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/themes/dark-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/events-portal.css" asp-append-version="true" />
    
    <!-- Open Graph meta tags for better social sharing -->
    @await RenderSectionAsync("MetaTags", required: false)
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
<nav class="navbar navbar-expand-lg bg-white shadow-sm">
    <div class="container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/images/logo.jpeg" alt="Go Sofia Events" class="navbar-logo" width="200" height="70" loading="eager" decoding="async" fetchpriority="high" />
            <span class="visually-hidden">Sofia Events</span>
        </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <!-- Mobile Login -->
        <div class="d-lg-none ms-auto">
            <partial name="_LoginPartial" />
        </div>
        
        <div class="navbar-collapse collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home me-1"></i>Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Events" asp-action="Index">
                        <i class="fas fa-calendar me-1"></i>All Events
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-filter me-1"></i>Categories
                    </a>
                    <ul class="dropdown-menu">
                        @foreach(var category in EventsPageViewModel.AvailableCategories)
                        {
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Events" asp-action="Index" asp-route-category="@category.Value">
                                    <i class="@category.IconClass me-2"></i>@category.DisplayName
                                </a>
                            </li>
                        }
                    </ul>
                </li>
                @if (User.IsInRole("Administrator") || User.IsInRole("EventManager"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-warning" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-cog me-1"></i>Admin Panel
                        </a>
                    </li>
                }
            </ul>
            
            <!-- Desktop Navigation Search with Tag Support -->
            <div class="d-none d-lg-flex flex-grow-1 mx-4 position-relative">
                <form asp-area="" asp-controller="Events" asp-action="Index" method="get" class="d-flex w-100">
                    <input class="form-control me-2" type="search" name="search" id="navbar-search" 
                           placeholder="Search events or #tags..." autocomplete="off">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
                <!-- Hidden autocomplete container -->
                <div id="navbar-search-results" class="position-absolute top-100 start-0 w-100 bg-white border rounded-bottom shadow-lg" style="display: none; z-index: 1000; max-height: 300px; overflow-y: auto;"></div>
            </div>
            
            <!-- Theme Switcher -->
            <div class="me-3">
                <partial name="_ThemeSwitcher" />
            </div>
            
            <partial name="_LoginPartial" />
        </div>
        
        <!-- Mobile Search Bar -->
        <div class="d-lg-none w-100 mt-2 border-top pt-2">
            <form asp-area="" asp-controller="Events" asp-action="Index" method="get" class="d-flex gap-2">
                <input class="form-control" type="search" name="search" id="mobile-navbar-search" 
                       placeholder="Search events..." autocomplete="off">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>
            <div id="mobile-navbar-search-results" class="position-absolute w-100 bg-white border rounded shadow-lg mt-1" style="display: none; z-index: 1000; max-height: 300px; overflow-y: auto; margin-left: -12px; margin-right: -12px; max-width: calc(100% + 24px);"></div>
        </div>
        
    </div>
</nav>

<main>
    @RenderBody()
</main>

<!-- Footer -->
<footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h6>Sofia Events</h6>
                <p>Your events portal</p>
            </div>
            <div class="col-md-6 text-end">
                <a href="#" class="text-white-50 text-decoration-none">Contacts</a>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/theme-switcher.js" asp-append-version="true"></script>

<!-- Enhanced Navigation Search Script -->
<script>
$(document).ready(function() {
    initializeSearch('#navbar-search', '#navbar-search-results', false);
    initializeSearch('#mobile-navbar-search', '#mobile-navbar-search-results', true);
    
    function initializeSearch(searchInputSelector, resultsContainerSelector, isMobile) {
        let searchTimeout;
        const searchInput = $(searchInputSelector);
        const resultsContainer = $(resultsContainerSelector);
        
        searchInput.on('input', function() {
            clearTimeout(searchTimeout);
            const query = $(this).val().trim();
            
            if (query.length >= 2) {
                searchTimeout = setTimeout(() => {
                    performSearch(query);
                }, 300);
            } else {
                resultsContainer.hide();
            }
        });
        
        // Hide results when clicking outside
        $(document).on('click', function(e) {
            const isClickInsideSearch = $(e.target).closest(searchInputSelector).length > 0 || 
                                       $(e.target).closest(resultsContainerSelector).length > 0;
            if (!isClickInsideSearch) {
                resultsContainer.hide();
            }
        });
        
        // Handle search result clicks
        $(document).on('click', `.${searchInputSelector.substring(1)}-item`, function(e) {
            e.preventDefault();
            const isTag = $(this).data('is-tag');
            const value = $(this).data('value');
            
            if (isTag) {
                const tagParam = encodeURIComponent(value);
                const url = `/Events?tags=${tagParam}`;
                window.location.href = url;
            } else {
                const eventId = $(this).data('id');
                window.location.href = `/Events/Details/${eventId}`;
            }
        });
        
        function performSearch(query) {
            $.ajax({
                url: '/Events/Search',
                data: { query: query },
                success: function(data) {
                    displaySearchResults(data, query);
                },
                error: function() {
                    resultsContainer.hide();
                }
            });
        }
        
        function displaySearchResults(data, query) {
            if (!data || data.length === 0) {
                resultsContainer.hide();
                return;
            }
            
            let html = '<div class="p-2">';
            
            const events = data.filter(item => !item.isTag);
            const tags = data.filter(item => item.isTag);
            
            if (tags.length > 0) {
                html += '<div class="mb-2"><small class="text-muted fw-bold">Tags</small></div>';
                tags.forEach(item => {
                    html += `
                        <div class="navbar-search-item p-2 rounded hover-bg-light cursor-pointer" 
                             data-is-tag="true" data-value="${item.tagName}">
                            <i class="fas fa-tag text-info me-2"></i>
                            <strong>${item.name}</strong> 
                            <small class="text-muted">${item.location}</small>
                        </div>`;
                });
            }
            
            if (events.length > 0) {
                if (tags.length > 0) {
                    html += '<hr class="my-2">';
                }
                html += '<div class="mb-2"><small class="text-muted fw-bold">Events</small></div>';
                events.slice(0, 4).forEach(item => {
                    html += `
                        <div class="navbar-search-item p-2 rounded hover-bg-light cursor-pointer" 
                             data-is-tag="false" data-id="${item.id}">
                            <i class="fas fa-calendar text-primary me-2"></i>
                            <strong>${item.name}</strong><br>
                            <small class="text-muted">${item.category || ''} ${item.date ? '• ' + item.date : ''}</small>
                        </div>`;
                });
            }
            
            html += '</div>';
            resultsContainer.html(html).show();
        }
    }
});
</script>

<style>
    .hover-bg-light:hover {
        background-color: #f8f9fa !important;
    }
    
    .cursor-pointer {
        cursor: pointer;
    }
    
    .navbar-search-item {
        transition: background-color 0.2s ease;
    }
    
    /* Desktop: Login buttons on one line */
    @@media (min-width: 992px) {
        .navbar-nav:last-child {
            flex-direction: row;
        }
    }
    
    /* Mobile: Login in navbar-nav should be horizontal */
    .d-lg-none .navbar-nav {
        flex-direction: row;
        gap: 0.5rem;
    }
    
    .d-lg-none .navbar-nav .nav-item {
        margin-right: 0.5rem;
    }
    
    /* Mobile: Login box styling */
    .d-lg-none > div .navbar-nav {
        margin: 0;
        padding: 0;
    }
</style>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>