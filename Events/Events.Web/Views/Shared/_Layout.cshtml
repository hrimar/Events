<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sofia Events</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/events-portal.css" asp-append-version="true" />
</head>
<body>
<nav class="navbar navbar-expand-lg bg-white shadow-sm">
    <div class="container">
        <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">
            <i class="fas fa-calendar-alt me-2"></i>Events Bulgaria
        </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="navbar-collapse collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home me-1"></i>Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Events" asp-action="Index">
                        <i class="fas fa-calendar me-1"></i>All Events
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-filter me-1"></i>Categories
                    </a>
                    <ul class="dropdown-menu">
                        @foreach(var category in EventsPageViewModel.AvailableCategories)
                        {
                            <li>
                                <a class="dropdown-item" asp-controller="Events" asp-action="Category" asp-route-category="@category.Value">
                                    <i class="@category.IconClass me-2"></i>@category.DisplayName
                                </a>
                            </li>
                        }
                    </ul>
                </li>
            </ul>
            
            <!-- Search in navigation -->
            <form class="d-none d-lg-flex flex-grow-1 mx-4" asp-controller="Events" asp-action="Index" method="get">
                <input class="form-control me-2" type="search" name="search" placeholder="Search events...">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>
            
            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>

    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h6>Sofia Events</h6>
                    <p>Твоят портал за събития</p>
                </div>
                <div class="col-md-6 text-end">
                    <a href="#" class="text-white-50 text-decoration-none">Контакти</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>