@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-5 text-center">
                    <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
                    
                    <h1 class="fw-bold mb-3">Oops! Something went wrong</h1>
                    <p class="text-muted mb-4">
                        We encountered an unexpected error. Our team has been notified and is working to fix it.
                    </p>

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-secondary text-start mb-4" role="alert">
                            <small>
                                <strong>Request ID:</strong><br />
                                <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }

                    <div class="d-grid gap-2">
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>Go to Home
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </a>
                    </div>

                    <hr class="my-4">

                    <p class="text-muted small">
                        Need help? <a href="mailto:support@sofiaevents.local" class="text-decoration-none">Contact Support</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Error page doesn't need additional scripts -->
}
