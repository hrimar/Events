@model Events.Web.Models.EventViewModel

@{
    ViewData["Title"] = Model.Name;
    var relatedEvents = ViewBag.RelatedEvents as List<Events.Web.Models.EventViewModel> ?? new List<Events.Web.Models.EventViewModel>();
    var currentUrl = $"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}";
    var fullImageUrl = Model.DefaultImage.StartsWith("http") ? Model.DefaultImage : $"{Context.Request.Scheme}://{Context.Request.Host}{Model.DefaultImage}";
}

@section MetaTags {
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="event" />
    <meta property="og:title" content="@Model.Name" />
    <meta property="og:description" content="@(Model.ShortDescription ?? $"Join us for {Model.Name} on {Model.FormattedDate} in {Model.City}")" />
    <meta property="og:image" content="@fullImageUrl" />
    <meta property="og:url" content="@currentUrl" />
    <meta property="og:site_name" content="Sofia Events" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@Model.Name" />
    <meta name="twitter:description" content="@(Model.ShortDescription ?? $"Join us for {Model.Name} on {Model.FormattedDate} in {Model.City}")" />
    <meta name="twitter:image" content="@fullImageUrl" />
    
    <!-- Event specific -->
    <meta property="event:start_date" content="@Model.Date.ToString("yyyy-MM-dd")" />
    <meta property="event:location" content="@Model.City, @Model.Location" />
    @* No price meta at all *@
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Events" asp-action="Index">Events</a></li>
            @if(!string.IsNullOrEmpty(Model.CategoryName))
            {
                <li class="breadcrumb-item">
                    <a asp-controller="Events" asp-action="Category" asp-route-category="@Model.CategoryName">@Model.CategoryName</a>
                </li>
            }
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Main Event Details -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <!-- Event Image -->
                <div class="event-detail-image">
                    <img src="@Model.DefaultImage" 
                         alt="@Model.Name" 
                         class="w-100"
                         style="height: 400px; object-fit: contain; background: #f8f9fa;"
                         onerror="this.src='/images/default_event_image.jpeg'">
                    @* Show 'Free' badge only for free events *@
                    @if (Model.IsFree)
                    {
                        <div class="event-price-overlay event-free">Free</div>
                    }
                </div>

                <div class="card-body">
                    <!-- Title and Basic Info -->
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h1 class="h2 mb-2">@Model.Name</h1>
                            
                            <div class="mb-3">
                                @if(!string.IsNullOrEmpty(Model.CategoryName))
                                {
                                    <a href="/Events/Category/@Model.CategoryName" class="badge bg-primary text-decoration-none me-2">
                                        <i class="fas fa-layer-group me-1"></i>@Model.CategoryName
                                    </a>
                                }
                                @if(!string.IsNullOrEmpty(Model.SubCategoryName))
                                {
                                    <a href="@Url.Action("Index", "Events", new { subCategory = Model.SubCategoryName })" 
                                       class="badge bg-secondary text-decoration-none">
                                        <i class="fas fa-tags me-1"></i>@Model.SubCategoryName
                                    </a>
                                }
                            </div>

                            <!-- Enhanced Tag Display -->
                            @if(Model.Tags.Any())
                            {
                                <div class="mb-3">
                                    <small class="text-muted d-block mb-2">
                                        <i class="fas fa-tags me-1"></i>Event Tags
                                    </small>
                                    <div class="event-tags-detailed">
                                        @foreach(var tag in Model.Tags)
                                        {
                                            <a href="@Url.Action("ByTag", "Events", new { tagName = tag })" 
                                               class="badge bg-info text-white text-decoration-none me-2 mb-2 tag-detail-link">
                                                <i class="fas fa-tag me-1"></i>@tag
                                            </a>
                                        }
                                        @if(Model.Tags.Count >= 3)
                                        {
                                            <a href="@Url.Action("Index", "Events", new { tags = string.Join(",", Model.Tags.Take(3)) })" 
                                               class="btn btn-sm btn-outline-info ms-2">
                                                <i class="fas fa-search me-1"></i>Find Similar Events
                                            </a>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="text-end">
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <button class="btn btn-outline-danger mb-2" onclick="toggleFavorite(@Model.Id)">
                                    <i class="fas fa-heart"></i> Save
                                </button>
                            }
                            else
                            {
                                <a href="/Identity/Account/Login?returnUrl=@Url.Action("Details", "Events", 
                                    new { id = Model.Id })" class="btn btn-outline-secondary mb-2">
                                    <i class="fas fa-heart"></i> Login to Save
                                </a>
                            }
                            <br>
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-share-alt"></i> Share
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#" onclick="shareEvent('facebook')">
                                        <i class="fab fa-facebook-f text-primary me-2"></i>Facebook
                                    </a></li>
                                    <li><a class="dropdown-item" href="#" onclick="shareEvent('twitter')">
                                        <i class="fab fa-twitter text-info me-2"></i>Twitter
                                    </a></li>
                                    <li><a class="dropdown-item" href="#" onclick="shareEvent('whatsapp')">
                                        <i class="fab fa-whatsapp text-success me-2"></i>WhatsApp
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#" onclick="copyLink()">
                                        <i class="fas fa-link me-2"></i>Copy Link
                                    </a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Event Details Grid -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-calendar text-primary me-3" style="width: 20px;"></i>
                                <div>
                                    <strong>Date & Time</strong><br>
                                    <span class="text-muted">@Model.FormattedDate at @Model.FormattedTime</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-map-marker-alt text-primary me-3" style="width: 20px;"></i>
                                <div>
                                    <strong>Location</strong><br>
                                    <span class="text-muted">@Model.Location</span>
                                </div>
                            </div>
                        </div>

                        @* No price display at all *@
                        
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-clock text-primary me-3" style="width: 20px;"></i>
                                <div>
                                    <strong>Status</strong><br>
                                    <span class="badge bg-success">@Model.Status</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    @if(!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h4>About this event</h4>
                            <div class="text-muted">
                                @Html.Raw(Model.Description.Replace("\n", "<br>"))
                            </div>
                        </div>
                    }

                    <!-- Quick Actions -->
                    <div class="d-flex gap-2 flex-wrap">
                        @if(!string.IsNullOrEmpty(Model.CategoryName))
                        {
                            <a href="@Url.Action("Index", "Events", new { category = Model.CategoryName })" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-layer-group me-1"></i>More @Model.CategoryName Events
                            </a>
                        }
                        <a href="@Url.Action("Index", "Events", new { search = Model.City })" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-map-marker-alt me-1"></i>Events in @Model.City
                        </a>
                        @if(Model.IsFree)
                        {
                            <a href="@Url.Action("Index", "Events", new { free = true })" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-gift me-1"></i>More Free Events
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Action Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body text-center">
                    @if(Model.HasTicketUrl)
                    {
                        <a href="@Model.TicketUrl" target="_blank" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-ticket-alt me-2"></i>Buy Tickets
                        </a>
                        <small class="text-muted">You'll be redirected to the official ticketing site</small>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            Ticket information not available
                        </div>
                    }
                </div>
            </div>

            <!-- Related Events -->
            @if(relatedEvents.Any())
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-lightbulb text-warning me-1"></i>
                                You Might Also Like
                            </h6>
                        </div>
                        
                        @foreach(var relatedEvent in relatedEvents.Take(4))
                        {
                            <div class="d-flex mb-3 p-2 rounded border-start border-3 border-info">
                                <img src="@relatedEvent.DefaultImage" 
                                     alt="@relatedEvent.Name"
                                     class="rounded me-3"
                                     style="width: 60px; height: 60px; object-fit: cover;"
                                     onerror="this.src='/images/default_event_image.jpeg'">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">
                                        <a href="/Events/Details/@relatedEvent.Id" class="text-decoration-none">
                                            @relatedEvent.Name
                                        </a>
                                    </h6>
                                    <small class="text-muted d-block">
                                        <i class="fas fa-calendar me-1"></i>@relatedEvent.FormattedDate
                                    </small>
                                    <small class="text-muted">
                                        <i class="fas fa-map-marker-alt me-1"></i>@relatedEvent.Location
                                    </small>
                                    @if(relatedEvent.Tags.Any())
                                    {
                                        <div class="mt-1">
                                            @foreach(var tag in relatedEvent.Tags.Take(2))
                                            {
                                                <span class="badge bg-light text-dark me-1" style="font-size: 0.7rem;">@tag</span>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        
                        @if(!string.IsNullOrEmpty(Model.CategoryName))
                        {
                            <a href="/Events/Category/@Model.CategoryName" class="btn btn-outline-primary btn-sm w-100">
                                <i class="fas fa-th-list me-1"></i>View All @Model.CategoryName Events
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/favorites.js"></script>
    <script>
        function toggleFavorite(eventId) {
            const button = event.target.closest('button');
            Favorites.toggleFavorite(eventId, button);
        }

        function shareEvent(platform) {
            const url = encodeURIComponent(window.location.href);
            const title = encodeURIComponent('@Model.Name');
            
            let shareUrl = '';
            switch(platform) {
                case 'facebook':
                    shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${url}`;
                    break;
                case 'twitter':
                    shareUrl = `https://twitter.com/intent/tweet?url=${url}&text=${title}`;
                    break;
                case 'whatsapp':
                    shareUrl = `https://wa.me/?text=${title} ${url}`;
                    break;
            }
            
            if(shareUrl) {
                window.open(shareUrl, '_blank', 'width=600,height=400');
            }
        }

        function copyLink() {
            navigator.clipboard.writeText(window.location.href)
                .then(() => {
                    Favorites.showMessage('Link copied to clipboard!', 'success');
                })
                .catch(() => {
                    Favorites.showMessage('Failed to copy link', 'error');
                });
        }
    </script>
    
    <!-- Custom CSS for enhanced details page -->
    <style>
        .tag-detail-link {
            font-size: 0.9rem;
            padding: 0.4rem 0.8rem;
            transition: all 0.2s;
        }
        
        .tag-detail-link:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        .event-tags-detailed .badge {
            border: 1px solid rgba(255,255,255,0.2);
        }
        
        .event-detail-image {
            position: relative;
            overflow: hidden;
        }
        
        .event-price-overlay {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: rgba(0,0,0,0.8);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: bold;
        }
        
        .event-free {
            background: rgba(40, 167, 69, 0.9) !important;
        }
        
        .border-start {
            border-left: 3px solid var(--bs-info) !important;
        }
        
        .toast {
            z-index: 9999;
        }
    </style>
}